set nocompatible

" mouse
:set mouse=a

" Enable syntax highlighting
syntax on
filetype plugin indent on

" Add line numbers
set number
set ruler
set cursorline

" Set encoding
set encoding=utf-8

" Show trailing spaces and highlight hard tabs
set list listchars=tab:»·,trail:·

" Whitespace stuff
set nowrap
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
